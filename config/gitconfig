[user]
    name           = Aiden Benner
    email          = aiden.benner@gmail.com

[commit]
    template       = ~/.git-commit-template.txt

[diff]
    tool           = meld

[difftool]
    prompt         = false

[difftool "meld"]
    trustExitCode  = true
    cmd            = open -W -a Meld --args \"$LOCAL\" \"$REMOTE\"

[merge]
    tool           = meld

[mergetool]
    prompt         = false

[mergetool "meld"]
    trustExitCode  = true
    cmd            = open -W -a Meld --args --auto-merge \"$LOCAL\" \"$BASE\" \"$REMOTE\" --output=\"$MERGED\"

[credential]
    helper         = cache --timeout 30000

[core]
    editor         = vim
